{
  "name": "colbycomms/wp-theme-museum",
  "description": "A WordPress theme made for Colby Museum products.",
  "type": "wordpress-theme",
  "require": {
    "colbycomms/colby-svg": "^1.0",
    "htmlburger/carbon-fields": "^2.1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.2",
    "wp-coding-standards/wpcs": "^0.14.0"
  },
  "authors": [
    {
      "name": "John Watkins",
      "email": "john.watkins@colby.edu"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "ColbyComms\\MuseumTheme\\": "museum-theme"
    },
    "files": ["museum-theme/index.php"]
  },
  "scripts": {
    "phpcbf": "phpcbf --extensions=php",
    "lint": "phpcs --extensions=php -s",
    "test": "composer lint"
  }
}
